<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityTheme.Base.Material.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="infoIconEncounter">@drawable/info_white</item>
        <item name="infoIconDialog">@drawable/info_material_green2</item>

        <item name="listChoiceBackgroundIndicator">@drawable/abc_list_selector_holo_light</item>
        <item name="android:dropDownSelector">@drawable/abc_list_selector_holo_light</item>
        <item name="actionBarTitleBackground">@drawable/abc_item_background_holo_dark</item>
        <item name="actionBarItemBackground">@drawable/abc_item_background_holo_dark</item>
        <item name="selectableItemBackground">@drawable/abc_item_background_holo_light</item>
        <item name="statusBarPadding">0dp</item>
        <item name="android:dialogTheme">@style/DialogTheme.Material.Light</item>
    </style>

    <style name="ActivityTheme.Base.Material.Dark" parent="Theme.AppCompat">
        <item name="infoIconEncounter">@drawable/info_white</item>
        <item name="infoIconDialog">@drawable/info_material_green2</item>

        <item name="statusBarPadding">0dp</item>
        <item name="android:dialogTheme">@style/DialogTheme.Material.Dark</item>
    </style>

    <style name="DialogTheme.Base.Material.Light" parent="ActivityTheme.Material.Light">
        <item name="android:actionModeBackground">
            @drawable/abc_cab_background_top_mtrl_light_green2
        </item>
    </style>

    <style name="DialogTheme.Material.Light" parent="DialogTheme.Base.Material.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>

        <!-- A collection of action mode related attributes in android namespace which need to be set for text selection to be themed correctly -->
        <item name="android:actionBarSize">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:actionModeCloseDrawable">?actionModeCloseDrawable</item>
        <item name="android:actionModeCloseButtonStyle">?actionModeCloseButtonStyle</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle.Material.Dialog</item>
    </style>

    <style name="DialogTheme.Base.Material.Dark" parent="ActivityTheme.Material.Dark">
        <item name="android:actionModeBackground">
            @drawable/abc_cab_background_top_mtrl_dark_green2
        </item>
    </style>

    <style name="DialogTheme.Material.Dark" parent="DialogTheme.Base.Material.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>

        <!-- A collection of action mode related attributes in android namespace which need to be set for text selection to be themed correctly -->
        <item name="android:actionBarSize">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:actionModeCloseDrawable">?actionModeCloseDrawable</item>
        <item name="android:actionModeCloseButtonStyle">?actionModeCloseButtonStyle</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle.Material.Dialog</item>
    </style>

</resources>