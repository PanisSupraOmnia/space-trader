<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/screen_status_cargo_tribbles"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_cargo_antidote"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_cargo_antidote"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_cargo_artifact"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_cargo_artifact"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_cargo_hagglingcomputer"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_cargo_hagglingcomputer"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_cargo_reactor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_cargo_reactor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_cargo_reactorfuel"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_cargo_singularity"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_cargo_singularity"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_cargo_default"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_cargo_default" />
    </LinearLayout>

    <include layout="@layout/screen_status_spacer" android:id="@+id/spacer"/>

    <LinearLayout
        android:id="@+id/screen_status_buttons"
        style="@style/ScreenRow"
        android:layout_below="@id/spacer"
        android:gravity="start" >

        <Button
            android:id="@+id/screen_status_back_button"
            style="?attr/buttonStyleRounded" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/screen_status_back_button" />

        <Button
            android:id="@+id/screen_status_ship_button"
            style="?attr/buttonStyleRounded" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/screen_status_ship_button" />

        <Button
            android:id="@+id/screen_status_quests_button"
            style="?attr/buttonStyleRounded" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/screen_status_quests_button" />
    </LinearLayout>

</RelativeLayout>