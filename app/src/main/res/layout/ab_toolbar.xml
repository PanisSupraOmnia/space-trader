<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/status_bar_padding"
        android:layout_width="match_parent"
        android:layout_height="?statusBarPadding"
        android:layout_alignParentTop="true"
        android:background="?colorPrimary" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="?actionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_below="@id/status_bar_padding"
        android:background="?attr/actionBarBackgroundDefault"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:popupTheme="?actionBarTheme"
        android:theme="?actionBarTheme"
        app:titleTextAppearance="?attr/actionBarTitleTextStyle" />

    <View
        android:id="@+id/status_bar_tint"
        android:layout_width="match_parent"
        android:layout_height="?statusBarPadding"
        android:layout_alignParentTop="true"
        android:background="@color/status_bar_extra_tint" />

</RelativeLayout>
