<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootLayout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/screen_warp_target_pagerspacer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:visibility="invisible" >

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" style="?attr/buttonStyleRounded" />
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/screen_warp_target_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/screen_warp_target_pagerspacer"
                android:layout_alignTop="@id/screen_warp_target_pagerspacer"
                android:paddingTop="@dimen/activity_vertical_margin" />

        </RelativeLayout>
        
        <include layout="@layout/screen_warp_subscreen_buttons" />

    </LinearLayout>

    <include layout="@layout/screen_warp_subscreen_arrows" />

</RelativeLayout>