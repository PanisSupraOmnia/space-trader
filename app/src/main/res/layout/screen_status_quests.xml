<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootLayout"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/screen_status_quests_monster"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_monster"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_dragonfly"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_dragonfly"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_disease"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_disease"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_artifact"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_artifact"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_wild"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_wild"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_jarek"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_jarek"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_invasion"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_experiment"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_reactor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_reactor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_scarab"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_scarab"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_tribbles"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_tribbles"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_moon"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_moon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/screen_status_quests_default"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:minLines="1"
            android:singleLine="false"
            android:text="@string/screen_status_quests_default" />
    </LinearLayout>

    <include
        android:id="@+id/spacer"
        layout="@layout/screen_status_spacer" />

    <LinearLayout
        android:id="@+id/screen_status_buttons"
        style="@style/ScreenRow"
        android:layout_below="@id/spacer"
        android:gravity="start" >

        <Button
            android:id="@+id/screen_status_back_button"
            style="?attr/buttonStyleRounded" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/screen_status_back_button" />

        <Button
            android:id="@+id/screen_status_ship_button"
            style="?attr/buttonStyleRounded" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/screen_status_ship_button" />

        <Button
            android:id="@+id/screen_status_cargo_button"
            style="?attr/buttonStyleRounded" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/screen_status_cargo_button" />
    </LinearLayout>

</RelativeLayout>