<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootLayout"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="8dip"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:paddingTop="8dip">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_plunder_water"
            style="@style/ScreenRow">

            <Button
                android:id="@+id/dialog_plunder_water_amount"
                style="?attr/buttonStyleSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/tradeitem_water" />

            <Button
                android:id="@+id/dialog_plunder_water_all"
                style="?attr/buttonStyleSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/generic_all" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_plunder_furs"
            style="@style/ScreenRow">

            <Button
                android:id="@+id/dialog_plunder_furs_amount"
                style="?attr/buttonStyleSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/tradeitem_furs" />

            <Button
                android:id="@+id/dialog_plunder_furs_all"
                style="?attr/buttonStyleSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/generic_all" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_plunder_food"
            style="@style/ScreenRow">

            <Button
                android:id="@+id/dialog_plunder_food_amount"
                style="?attr/buttonStyleSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/tradeitem_food" />

            <Button
                android:id="@+id/dialog_plunder_food_all"
                style="?attr/buttonStyleSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
