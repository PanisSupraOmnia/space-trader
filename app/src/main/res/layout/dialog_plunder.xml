                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/tradeitem_ore" />

            <Button
                android:id="@+id/dialog_plunder_ore_all"
                style="?attr/buttonStyleSquare"
                android:layout_width="0dp"
