            android:layout_width="0dp"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/screen_sell_water_price"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="right" />
