<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        style="@style/RootLayout"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingBottom="8dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="8dip"
        android:gravity="left|top" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/dialog_options_ignore" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left" >

            <CheckBox
                android:id="@+id/dialog_options_ignore_police"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_options_ignore_police"/>

            <CheckBox
                android:id="@+id/dialog_options_ignore_pirates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_options_ignore_pirates"  />

            <CheckBox
                android:id="@+id/dialog_options_ignore_traders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_options_ignore_traders"  />
        </LinearLayout>
        
        <CheckBox
            android:id="@+id/dialog_options_ignore_dealing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_ignore_dealing" />
        
        <CheckBox
            android:id="@+id/dialog_options_fulltank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_fulltank" />
        
        <CheckBox
            android:id="@+id/dialog_options_fullhull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_fullhull" />
        
        <CheckBox
            android:id="@+id/dialog_options_warpcosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_warpcosts" />
        
        <CheckBox
            android:id="@+id/dialog_options_chartinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_chartinfo" />
        
        <CheckBox
            android:id="@+id/dialog_options_contattack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_contattack" />
        
        <CheckBox
            android:id="@+id/dialog_options_contattflee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_contattflee" />

        


        <LinearLayout
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_options_bays" />

            <EditText
                android:id="@+id/dialog_options_bays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="2" />
        </LinearLayout>
        
        
        <CheckBox
            android:id="@+id/dialog_options_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_news" />
        
        <CheckBox
            android:id="@+id/dialog_options_volumescroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_volumescroll" />
        
        <CheckBox
            android:id="@+id/dialog_options_recallscreens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_recallscreens" />
        
        <CheckBox
            android:id="@+id/dialog_options_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_range" />
        
        <CheckBox
            android:id="@+id/dialog_options_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_track" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/dialog_options_encounterstyle" />

        <RadioGroup
            android:id="@+id/dialog_options_encounterstyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/dialog_options_encounterstyle_textual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_options_encounterstyle_textual" />

            <RadioButton
                android:id="@+id/dialog_options_encounterstyle_graphical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_options_encounterstyle_graphical"  />

            <RadioButton
                android:id="@+id/dialog_options_encounterstyle_both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_options_encounterstyle_both"  />
        </RadioGroup>
        
        
        <CheckBox
            android:id="@+id/dialog_options_loans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_loans" />
        
        <CheckBox
            android:id="@+id/dialog_options_shareprefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_shareprefs" />
        
        <CheckBox
            android:id="@+id/dialog_options_identify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_identify" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/dialog_options_theme" />

        <RadioGroup
            android:id="@+id/dialog_options_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/dialog_options_theme_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="@string/dialog_options_theme_light" />

            <RadioButton
                android:id="@+id/dialog_options_theme_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="@string/dialog_options_theme_dark" />

            <RadioButton
                android:id="@+id/dialog_options_theme_palm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="@string/dialog_options_theme_palm"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/dialog_options_developermode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_options_developermode" />
        
    </LinearLayout>

</ScrollView>