<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScreenRow"
    android:gravity="right"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/screen_warp_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/screen_warp_next"
        android:paddingBottom="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:src="?attr/rightArrow" />

    <ImageButton
        android:id="@+id/screen_warp_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/screen_warp_next"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/screen_warp_prev"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:paddingTop="8dp"
        android:src="?attr/leftArrow" />

</merge>