<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <TextView
        android:id="@+id/screen_warp_avgprices_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/screen_warp_avgprices_resources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.75"
            android:orientation="vertical">

            <TextView
                android:id="@+id/screen_warp_avgprices_water_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_water" />

            <TextView
                android:id="@+id/screen_warp_avgprices_furs_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_furs" />

            <TextView
                android:id="@+id/screen_warp_avgprices_food_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_food" />

            <TextView
                android:id="@+id/screen_warp_avgprices_ore_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_ore" />

            <TextView
                android:id="@+id/screen_warp_avgprices_games_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_games" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1.9"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/screen_warp_avgprices_water_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />

            <TextView
                android:id="@+id/screen_warp_avgprices_furs_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />

            <TextView
                android:id="@+id/screen_warp_avgprices_food_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />

            <TextView
                android:id="@+id/screen_warp_avgprices_ore_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />

            <TextView
                android:id="@+id/screen_warp_avgprices_games_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.45"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/screen_warp_avgprices_firearms_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_firearms" />

            <TextView
                android:id="@+id/screen_warp_avgprices_medicine_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_medicine" />

            <TextView
                android:id="@+id/screen_warp_avgprices_machinery_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_machinery" />

            <TextView
                android:id="@+id/screen_warp_avgprices_narcotics_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_narcotics" />

            <TextView
                android:id="@+id/screen_warp_avgprices_robots_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="pagerClick"
                android:text="@string/tradeitem_robots" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/screen_warp_avgprices_firearms_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />

            <TextView
                android:id="@+id/screen_warp_avgprices_medicine_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />

            <TextView
                android:id="@+id/screen_warp_avgprices_machinery_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />

            <TextView
                android:id="@+id/screen_warp_avgprices_narcotics_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />

            <TextView
                android:id="@+id/screen_warp_avgprices_robots_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:onClick="pagerClick" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>