<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScreenRow"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="3"
        android:orientation="vertical" >

        <Button
            android:id="@+id/screen_warp_toggle"
            style="?attr/buttonStyleRounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />

        <Button
            android:id="@+id/screen_warp_back_button"
            style="?attr/buttonStyleRounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/screen_warp_back_button" />
    </LinearLayout>

    <Button
        android:id="@+id/screen_warp_warp"
        style="?attr/buttonStyleRounded"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="@string/screen_warp_warp"
        android:textSize="40sp" />

</LinearLayout>