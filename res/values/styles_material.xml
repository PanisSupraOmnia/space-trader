<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="ActivityTheme.Base.Material.Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Some extra attributes so we have dark actionbar with light actionmode since cab widgets are being colored with light theme pre-lollipop -->
        <item name="actionModeCloseDrawable">@drawable/abc_ic_ab_back_mtrl_am_black</item>
        <item name="actionModeBackground">@drawable/abc_cab_background_top_mtrl_light_green2</item>
    </style>
    
    <style name="ActivityTheme.Material.Light" parent="@style/ActivityTheme.Base.Material.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/icon_green1</item>
        <item name="colorPrimaryDark">@color/icon_green1_dark</item>
        <item name="colorAccent">@color/icon_green2</item>
        <item name="android:textColorLink">?colorAccent</item>

        <item name="actionBarStyle">@style/ActionBarStyle.Material.Dark</item>
        <item name="actionBarBackgroundDocked">?colorPrimary</item>
        <item name="actionBarBackgroundDefault">?colorPrimary</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle.Material.Dark</item>
        <item name="actionMenuTextAppearance">@style/ActionButtonText.Dark</item>
        <item name="actionBarWidgetTheme">@style/ActionBarWidgetTheme.Dark</item>
        <item name="actionBarTitleTextStyle">@style/TitleText.Dark</item>
        <item name="actionBarTitleBackground">?attr/selectableItemBackground</item>
        <item name="actionModeCloseButtonStyle">@style/ActionModeCloseButtonStyle.Material.Dark</item>
        
        <item name="roundedButtonDrawable">@drawable/btn_rounded_material_light</item>
        <item name="squareButtonDrawable">@drawable/btn_square_material_light</item>
        <item name="strokeColor">@color/stroke_material_light</item>
        <item name="leftArrow">@drawable/arrow_left_black</item>
        <item name="rightArrow">@drawable/arrow_right_black</item>
        
        <item name="infoIconEncounter">@drawable/info_white</item>
        <item name="infoIconDialog">@drawable/info_material_green2</item>
        <item name="dialogTitleTextStyle">@style/TextAppearance.DialogWindowTitle.Material</item>
        <item name="dialogDividerColor">?colorAccent</item>
        <item name="pressableTextColor">?android:textColorPrimary</item>
        <item name="dialogStyle">@style/Dialog.Light</item>
        <item name="dialogButtonBarStyle">@style/ButtonBar.Dialog.Light</item>
        <item name="dialogButtonStyle">@style/Button.Dialog.Material.Light</item>
        <item name="dialogDivider">@drawable/list_divider_holo_light</item>
        
        <item name="android:textViewStyle">@style/TextView.Light</item>
        <item name="textViewStyleHeader">@style/TextView.Header.Light</item>
        <item name="buttonStyleRounded">@style/Button.Rounded.Light</item>
        <item name="buttonStyleSquare">@style/Button.Square.Light</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorHighlight">@color/highlighted_text_green2</item>
        
        <item name="android:editTextStyle">@style/EditText.Material</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView.Material.Light</item>
        
        <item name="textAppearanceLargePopupMenu">?android:textAppearanceMedium</item>
    </style>

